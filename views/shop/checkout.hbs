<div class="container">
    <form action="/checkout" method="post" id="checkout-form">
        <div class="row">
            <div class="col s12">
                <div class="col s12">
                    <h5>Customer Details</h5>
                    <div class="input-field">
                        <label for="name">Name</label>
                        <input type="text" id="name" value="{{firstname}} {{lastname}}" required name="name">
                    </div>
                </div>
                <div class="col s12">
                    <div class="input-field">
                        <label for="address">Address</label>
                        <input type="text" id="address" value="{{address}}" required name="address">
                    </div>
                </div>
            </div>

            <hr>
            <div class="col s12">
                <div class="col s12">
                    <div class="input-field">
                        <label for="card-name">Card Holder Name</label>
                        <input type="text" id="card-name" class="form-control" required>
                    </div>
                </div>
                <div class="col s12">
                    <div class="input-field">
                        <label for="card-number">Credit Card Number</label>
                        <input type="text" id="card-number" class="form-control" required>
                    </div>
                </div>
                <div class="col s12">
                    <div class="row">
                        <div class="col s6">
                            <div class="input-field">
                                <label for="card-expiry-month">Expiration Month</label>
                                <input type="text" id="card-expiry-month" class="form-control" required>
                            </div>
                        </div>
                        <div class="col s6">
                            <div class="input-field">
                                <label for="card-expiry-year">Expiration Year</label>
                                <input type="text" id="card-expiry-year" class="form-control" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col s12">
                    <div class="input-field">
                        <label for="card-cvc">CVV</label>
                        <input type="password" id="card-cvc" class="form-control" data-fv-cvv="true" required>
                    </div>
                </div>
            </div>
            <div class="col s12">
                <div class="input-field">
                    <button type="submit" class="btn btn-success">Buy now</button>
                </div>
            </div>

        </div>

    </form>
</div>


<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>