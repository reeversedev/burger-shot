 {{# each products }}
<div class="row">
    {{# each this}}
    <div class="col s12 m4">
        <div class="card hoverable">
            <div class="card-image">
                <img class="materialboxed responsive-img" src="{{this.imagePath}}" id="item-image">
                <a href="/add-to-cart/{{this._id}}" class="btn-floating halfway-fab waves-effect waves-light red">
                    <i class="material-icons">add</i>
                </a>
            </div>
            <div class="card-content">
                <span class="card-title">
                    <a href="/products/{{this._id}}" target="_blank">{{this.title}}</a>
                </span>
                <p>{{this.description}}</p>
                <span class="price">&#x20B9;{{this.price}}</span>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}