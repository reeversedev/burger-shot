 {{# each products }}
<div class="row">
    {{# each this}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                <img src="{{this.imagePath}}" height="300">
                <a href="/add-to-cart/{{this._id}}" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">{{this.title}}</span>
                <span class="price">&#x20B9;{{this.price}}</span>
                <p>{{this.description}}</p>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}